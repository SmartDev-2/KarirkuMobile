<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".lupasandi">

    <ImageView
        android:id="@+id/icbg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pattern"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:padding="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah kata sandi "
        android:layout_marginTop="185dp"
        android:fontFamily="@font/interdisplaybold"
        android:textColor="@color/blue"
        android:layout_marginLeft="24dp"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda mungkin logout dari akun anda di \nbeberapa perrangkat"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/blue"/>



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="300dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata sandi baru"
            android:fontFamily="@font/interdisplaybold"
            android:textColor="@color/blue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/pswrdbaru"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:background="@drawable/cornerroundedshape"
                android:fontFamily="sans-serif-medium"
                android:hint="Password baru"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"/>

            <!-- Eye Toggle -->
            <ImageView
                android:id="@+id/showpaswrd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_eyeoff"
                android:contentDescription="Toggle Password"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi kata sandi baru"
            android:fontFamily="@font/interdisplaybold"
            android:textColor="@color/blue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edt_Password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:background="@drawable/cornerroundedshape"
                android:fontFamily="sans-serif-medium"
                android:hint="Konfirmasi Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"/>

            <!-- Eye Toggle -->
            <ImageView
                android:id="@+id/imgTogglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_eyeoff"
                android:contentDescription="Toggle Password"/>
        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUbahpassword"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:text="Ubah sandi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#003C8F"
        app:cornerRadius="16dp"
        android:paddingTop="12dp"
        android:layout_alignParentEnd="true"
        android:paddingBottom="12dp"
        android:layout_marginTop="510dp"
        android:layout_marginRight="24dp"/>
</RelativeLayout>
