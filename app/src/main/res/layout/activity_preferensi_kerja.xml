<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pendataan Pengguna"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#0CADF1"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardUserData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_placeholder"

                        android:background="@drawable/circle_white"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/btnEditPhoto"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_edit"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/circle_white"
                        android:padding="6dp"
                        android:elevation="2dp"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:text="Nama Lengkap"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/inputNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_input"
                android:hint="Masukkan nama lengkap"
                android:textColor="@color/black"/>

            <TextView
                android:text="Email Pencaker"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/shape_input"
                android:layout_marginTop="6dp"
                android:inputType="textEmailAddress"
                android:hint="Masukkan email pencaker"/>

            <TextView
                android:text="Nomor HP"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/inputNoHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/shape_input"
                android:layout_marginTop="6dp"
                android:inputType="phone"
                android:hint="Masukkan nomor HP"/>

            <TextView
                android:text="Tanggal Lahir"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/inputTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/shape_input"
                android:layout_marginTop="6dp"
                android:focusable="false"
                android:hint="Pilih tanggal lahir"/>

            <TextView
                android:text="Gender"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />

            <TextView
                android:text="Alamat"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/inputAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/shape_input"
                android:layout_marginTop="6dp"
                android:hint="Tulis alamat lengkap"/>

            <TextView
                android:text="Pengalaman Kerja"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/inputPengalaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/shape_input"
                android:layout_marginTop="6dp"
                android:hint="Contoh: Barista 1 tahun"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SIMPAN"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0CADF1"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
