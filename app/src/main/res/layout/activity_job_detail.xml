<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_jobdetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detail Pekerjaan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imgCompanyLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/iconloker"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Pekerjaan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Perusahaan"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota Jember"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvTag1"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTag2"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvTag3"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_tag"
                    android:text="Tag3"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Pekerjaan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvJobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Deskripsi lengkap pekerjaan akan ditampilkan di sini."
                android:layout_marginBottom="18dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="24dp"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_card"
                    android:layout_margin="6dp">

                    <ImageView
                        android:id="@+id/icJobType"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_job"
                        android:layout_marginEnd="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis pekerjaan"
                            android:textSize="11sp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:id="@+id/tvJobTypeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Time"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_card"
                    android:layout_margin="6dp">

                    <ImageView
                        android:id="@+id/icSalary"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_salary"
                        android:layout_marginEnd="10dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gaji"
                            android:textSize="11sp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSalary"
                            android:text="Rp.210 - 250K"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_card"
                    android:layout_margin="6dp">

                    <ImageView
                        android:id="@+id/icTime"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_time"
                        android:layout_marginEnd="10dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jam kerja"
                            android:textSize="11sp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvWorkingHours"
                            android:text="9 - 5 PM"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_card"
                    android:layout_margin="6dp">

                    <ImageView
                        android:id="@+id/icSkill"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_skill"
                        android:layout_marginEnd="10dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keahlian"
                            android:textSize="11sp"
                            android:textColor="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvExpertise"
                            android:text="Expert"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persyaratan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Pengalaman 2+ tahun\n• Menguasai Java/Kotlin"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Hubungi via WhatsApp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#25D366"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="#25D366"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="#25D366"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text=" Lamar Pekerjaan Ini"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>