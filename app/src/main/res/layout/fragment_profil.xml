<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutProfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFC"
    tools:context=".profilFragment">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/headerProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile_placeholder"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"/>



            <LinearLayout
                android:id="@+id/layoutNama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MUHAMMAD SHOBRI"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSelengkapnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selengkapnya..."
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnSetting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_setting"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardStatistik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_card"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/dilamarContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingEnd="8dp">

                <ImageView
                    android:id="@+id/iconDilamar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_dilamar"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvJumlahDilamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDilamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dilamar"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <View
                android:id="@+id/lineStatistik"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/light_gray"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/disimpanContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/iconDisimpan"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_disimpan"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvJumlahDisimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDisimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disimpan"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardLengkapiProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_card"
            android:padding="16dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/iconBintangContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iconBintang1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bintang"
                    android:paddingHorizontal="5dp"/>

                <ImageView
                    android:id="@+id/iconBintang2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bintang"
                    android:paddingHorizontal="5dp"/>

                <ImageView
                    android:id="@+id/iconBintang3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bintang"
                    android:paddingHorizontal="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLengkapiProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lengkapi profilmu sekarang agar siap dilihat HRD"
                android:textSize="14sp"
                android:fontFamily="@font/interdisplaybold"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLengkapiProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LENGKAPI PROFIL"
                android:textSize="16sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#0CADF1"
                app:strokeColor="#0CADF1"
                app:strokeWidth="1dp"
                app:cornerRadius="5dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvProfilPreferensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil &amp; Preferensi Pekerjaan"
            android:textSize="16sp"
            android:fontFamily="@font/interdisplaybold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/cardProfilPreferensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_card"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/itemProfilKarirku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconProfilKarirku"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pkarirku"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvProfilKarirku"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Profil Karirku"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/panahProfilKarirku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_panah"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"/>

            <LinearLayout
                android:id="@+id/itemCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iconCV"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cv"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvCV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CV"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/panahCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_panah"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"/>

            <LinearLayout
                android:id="@+id/itemPreferensiKerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iconPreferensiKerja"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pkerja"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvPreferensiKerja"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pendataan Pekerja"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:id="@+id/panahPreferensiKerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_panah"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvLainnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lainnya"
            android:textSize="16sp"
            android:fontFamily="@font/interdisplaybold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/btnKeluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/shape_card"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/iconKeluar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keluar"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvKeluar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keluar"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/panahKeluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_panah"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
