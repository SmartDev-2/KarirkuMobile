<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:layout_marginLeft="24dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgnotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_notifikasi" />

        <ImageView
            android:id="@+id/imgprofile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="24dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari pekerjaan yang paling \nrelevan denganmu"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="24dp"
        android:textSize="20sp"
        android:fontFamily="@font/interdisplaybold"
        android:textColor="@color/blue" />

    <!-- SEARCH BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/roundedshape"
        android:elevation="2dp"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Cari pekerjaan atau perusahaan..."
            android:padding="0dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:imeOptions="actionSearch"
            android:inputType="text" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_filter" />
    </LinearLayout>

    <!-- RIWAYAT PENCARIAN -->
    <LinearLayout
        android:id="@+id/searchHistoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="235dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riwayat Pencarian"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/interdisplaybold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSearchHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

    <!-- TABS -->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="237dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tab_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selected"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:text="Semua"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:fontFamily="@font/interdisplaybold" />

        <TextView
            android:id="@+id/tab_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_stroke"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:text="Terbaru"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/interdisplaybold" />

        <TextView
            android:id="@+id/tab_terlama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_stroke"
            android:paddingVertical="8dp"
            android:paddingHorizontal="20dp"
            android:text="Terlama"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/interdisplaybold" />
    </LinearLayout>

    <!-- REKOMENDASI HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/titleRecommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rekomendasi"
            android:textSize="18sp"
            android:fontFamily="@font/interdisplaybold"
            android:textColor="@color/blue"
            android:gravity="start"

            android:shadowColor="#50000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="4"
            />


        <TextView
            android:id="@+id/seeAllText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat semua"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/interdisplaybold"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6dp"
            android:gravity="end"

            android:shadowColor="#50000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="4"/>
    </LinearLayout>

    <!-- RECYCLERVIEW JOBS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJobs"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginTop="340dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:padding="16dp" />

</FrameLayout>